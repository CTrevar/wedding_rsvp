<h2><%= t(:registry) %></h2>
<p><%= t(:registry_message) %></p>

<% @registries.each do |registry| %>
  <% unless registry.link.nil? || registry.link.empty? %>
    <div>
      <% if registry.image_link.nil? %>
        <%= link_to registry.link, class:"btn btn-default btn-big" do %>
        <i class="fa fa-gift" aria-hidden="true"></i> <%= registry.name %>
        <% end %>
     <% else %>
        <%= link_to registry.link do %>
          <img src="<%= registry.image_link %>" style="max-width:35%;">
        <% end %>
      <% end %>
    </div>
    <br>
  <% end %>

  <% unless registry.code.nil? %>
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title"><%= registry.name %></h3>
      </div>
      <div class="panel-body">
        <%= registry.code %>
      </div>
    </div>
  <% end %>
<% end %>
