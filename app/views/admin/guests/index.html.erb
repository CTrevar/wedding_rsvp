<h1>Guests</h1>

<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>First name</th>
        <th>Last name</th>
        <th>Rsvp</th>
        <th>Email</th>
        <th>Num assistants</th>
        <th>Arrival date</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @guests.each do |guest| %>
        <tr>
          <td><%= guest.first_name %></td>
          <td><%= guest.last_name %></td>
          <td><%= guest.rsvp %></td>
          <td><%= guest.email %></td>
          <td><%= guest.num_assistants %></td>
          <td><%= guest.arrival_date %></td>
          <td><%= link_to 'Show', admin_guest_path(guest) %></td>
          <td><%= link_to 'Edit', edit_admin_guest_path(guest) %></td>
          <td><%= link_to 'Destroy', admin_guest_path(guest), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>

<%= link_to 'New Guest', new_admin_guest_path %>
