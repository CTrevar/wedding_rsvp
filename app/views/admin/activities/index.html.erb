<h1>Activities</h1>

<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Dress code</th>
        <th>Start day</th>
        <th>Start hour</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @activities.each do |activity| %>
        <tr>
          <td><%= activity.name %></td>
          <td><%= activity.description %></td>
          <td><%= activity.dress_code %></td>
          <td><%= activity.start_day %></td>
          <td><%= activity.start_hour %></td>
          <td><%= link_to 'Show', admin_activity_path(activity) %></td>
          <td><%= link_to 'Edit', edit_admin_activity_path(activity) %></td>
          <td><%= link_to 'Destroy', admin_activity_path(activity), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>

<%= link_to 'New Activity', new_admin_activity_path %>
